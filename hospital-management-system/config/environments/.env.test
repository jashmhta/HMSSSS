# Enterprise Hospital Management System - Test Environment
NODE_ENV=test
APP_NAME="Hospital Management System"
APP_VERSION=1.0.0
PORT=3001
API_VERSION=v1
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# Database Configuration
DATABASE_URL="postgresql://hms_test_user:TestPassword123!@localhost:5432/hms_test_db?connection_limit=5&pool_timeout=10&connect_timeout=5"
DATABASE_TEST_URL="postgresql://hms_test_user:TestPassword123!@localhost:5432/hms_test_db?connection_limit=5&pool_timeout=10"
PRISMA_DATABASE_URL="postgresql://hms_test_user:TestPassword123!@localhost:5432/hms_test_db"
SHADOW_DATABASE_URL="postgresql://hms_test_user:TestPassword123!@localhost:5432/hms_test_shadow_db"

# Database Pooling
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=10000
DB_POOL_ACQUIRE_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=TestRedisPassword123!
REDIS_DB=15
REDIS_CONNECTION_TIMEOUT=3000
REDIS_COMMAND_TIMEOUT=2000
REDIS_CACHE_DB=15
REDIS_SESSION_DB=15
REDIS_QUEUE_DB=15
REDIS_RATE_LIMIT_DB=15

# JWT Configuration
JWT_SECRET="test-super-secret-jwt-key-change-in-production-256-bit-minimum"
JWT_REFRESH_SECRET="test-super-secret-refresh-key-change-in-production-256-bit-minimum"
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER="hospital-management-system"
JWT_AUDIENCE="hms-users"

# Security Configuration
BCRYPT_ROUNDS=4
SESSION_SECRET="test-session-secret-key-for-testing"
ENCRYPTION_KEY="test-256-bit-encryption-key-in-hex-format"
CSRF_SECRET="test-csrf-protection-secret-key"

# Rate Limiting
RATE_LIMIT_TTL=30000
RATE_LIMIT_LIMIT=50
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=test@hospital.com
SMTP_PASS=test-app-password
SMTP_FROM=noreply@test.hospital.com
SMTP_NAME="HMS Test"
EMAIL_TEMPLATE_DIR=./src/templates/emails
EMAIL_BCC_ADMIN=test@hospital.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-test-twilio-account-sid
TWILIO_AUTH_TOKEN=your-test-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_ID=your-test-messaging-service-id

# File Upload Configuration
UPLOAD_DESTINATION=./test-uploads
UPLOAD_MAX_SIZE=1048576
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,txt
UPLOAD_MAX_FILES=3
UPLOAD_SECURE_PATH=/secure/test-uploads
UPLOAD_PUBLIC_PATH=/public/test-uploads

# External API Keys
OPENAI_API_KEY=your-test-openai-api-key
OPENAI_ORG_ID=your-test-openai-org-id
STRIPE_SECRET_KEY=your-test-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-test-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-test-stripe-webhook-secret
TALLY_API_KEY=your-test-tally-api-key
TALLY_COMPANY_ID=your-test-tally-company-id
TALLY_BASE_URL=https://api.tally.so

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/test.log
LOG_ERROR_FILE=./logs/test-error.log
LOG_MAX_SIZE=1048576
LOG_MAX_FILES=3
LOG_DATE_FORMAT=YYYY-MM-DD HH:mm:ss
LOG_FORMAT=json
LOG_INCLUDE_TIMESTAMP=true
LOG_INCLUDE_LEVEL=true
LOG_INCLUDE_CONTEXT=true

# Monitoring & Health Checks
PROMETHEUS_PORT=9091
GRAFANA_PORT=3003
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=1
BACKUP_COMPRESSION=false
BACKUP_ENCRYPTION=false
BACKUP_STORAGE=./test-backups
BACKUP_NOTIFICATION_EMAIL=test@hospital.com

# Caching Configuration
CACHE_TTL=60
CACHE_MAX_SIZE=100
CACHE_CHECK_PERIOD=60
CACHE_STALE_TTL=0

# Queue Configuration (BullMQ)
QUEUE_DEFAULT_CONCURRENCY=1
QUEUE_MAX_RETRIES=1
QUEUE_REMOVE_ON_COMPLETE=5
QUEUE_REMOVE_ON_FAIL=3
QUEUE_STALLED_INTERVAL=10000
QUEUE_MAX_STALLED_COUNT=1

# Development Settings
DEBUG_MODE=true
DEVELOPER_MODE=true
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs
GRAPHQL_ENABLED=false
GRAPHQL_PATH=/graphql

# Error Handling
ERROR_HANDLING_ENABLED=true
ERROR_REPORTING_ENABLED=true
ERROR_STACK_TRACE_ENABLED=true
ERROR_NOTIFICATION_ENABLED=false
ERROR_NOTIFICATION_EMAIL=test@hospital.com

# Feature Flags
FEATURE_TELEHEALTH_ENABLED=false
FEATURE_AI_DIAGNOSTICS_ENABLED=false
FEATURE_LAB_INTEGRATION_ENABLED=true
FEATURE_PHARMACY_INTEGRATION_ENABLED=true
FEATURE_BILLING_INTEGRATION_ENABLED=true
FEATURE_APPOINTMENT_REMINDERS_ENABLED=true
FEATURE_REPORTING_ENABLED=true
FEATURE_MULTI_TENANT_ENABLED=false

# Performance Optimization
PERFORMANCE_PROFILING_ENABLED=true
PERFORMANCE_SAMPLING_RATE=0.5
PERFORMANCE_SLOW_QUERY_THRESHOLD=1000
PERFORMANCE_MEMORY_LIMIT=512MB
PERFORMANCE_CPU_LIMIT=90%

# Infrastructure
KUBERNETES_ENABLED=false
DOCKER_ENABLED=true
HELM_ENABLED=false
ISTIO_ENABLED=false
CONTAINER_PORT=3001
CONTAINER_HOST=0.0.0.0
CONTAINER_WORKERS=1
CONTAINER_MAX_MEMORY=512MB