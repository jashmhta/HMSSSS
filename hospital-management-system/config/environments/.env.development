# Enterprise Hospital Management System - Development Environment
NODE_ENV=development
APP_NAME="Hospital Management System"
APP_VERSION=1.0.0
PORT=3001
API_VERSION=v1
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# Database Configuration
DATABASE_URL="postgresql://hms_dev_user:DevPassword123!@localhost:5432/hms_dev_db?connection_limit=10&pool_timeout=20&connect_timeout=10"
DATABASE_TEST_URL="postgresql://hms_test_user:TestPassword123!@localhost:5432/hms_test_db?connection_limit=5&pool_timeout=10"
PRISMA_DATABASE_URL="postgresql://hms_dev_user:DevPassword123!@localhost:5432/hms_dev_db"
SHADOW_DATABASE_URL="postgresql://hms_shadow_user:ShadowPassword123!@localhost:5432/hms_shadow_db"

# Database Pooling
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=RedisDevPassword123!
REDIS_DB=0
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=3000
REDIS_CACHE_DB=0
REDIS_SESSION_DB=1
REDIS_QUEUE_DB=2
REDIS_RATE_LIMIT_DB=3

# JWT Configuration
JWT_SECRET="dev-super-secret-jwt-key-change-in-production-256-bit-minimum"
JWT_REFRESH_SECRET="dev-super-secret-refresh-key-change-in-production-256-bit-minimum"
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER="hospital-management-system"
JWT_AUDIENCE="hms-users"

# Security Configuration
BCRYPT_ROUNDS=8
SESSION_SECRET="dev-session-secret-key-for-development"
ENCRYPTION_KEY="dev-256-bit-encryption-key-in-hex-format"
CSRF_SECRET="dev-csrf-protection-secret-key"

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-dev-email@gmail.com
SMTP_PASS=your-dev-app-password
SMTP_FROM=noreply@dev.hospital.com
SMTP_NAME="HMS Development"
EMAIL_TEMPLATE_DIR=./src/templates/emails
EMAIL_BCC_ADMIN=dev@hospital.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-dev-twilio-account-sid
TWILIO_AUTH_TOKEN=your-dev-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_ID=your-dev-messaging-service-id

# File Upload Configuration
UPLOAD_DESTINATION=./uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,txt
UPLOAD_MAX_FILES=5
UPLOAD_SECURE_PATH=/secure/uploads
UPLOAD_PUBLIC_PATH=/public/uploads

# External API Keys
OPENAI_API_KEY=your-dev-openai-api-key
OPENAI_ORG_ID=your-dev-openai-org-id
STRIPE_SECRET_KEY=your-dev-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-dev-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-dev-stripe-webhook-secret
TALLY_API_KEY=your-dev-tally-api-key
TALLY_COMPANY_ID=your-dev-tally-company-id
TALLY_BASE_URL=https://api.tally.so

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_ERROR_FILE=./logs/error.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_DATE_FORMAT=YYYY-MM-DD HH:mm:ss
LOG_FORMAT=json
LOG_INCLUDE_TIMESTAMP=true
LOG_INCLUDE_LEVEL=true
LOG_INCLUDE_CONTEXT=true

# Monitoring & Health Checks
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=false
BACKUP_ENCRYPTION=false
BACKUP_STORAGE=./backups
BACKUP_NOTIFICATION_EMAIL=dev@hospital.com

# Caching Configuration
CACHE_TTL=1800
CACHE_MAX_SIZE=500
CACHE_CHECK_PERIOD=300
CACHE_STALE_TTL=0

# Queue Configuration (BullMQ)
QUEUE_DEFAULT_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_REMOVE_ON_COMPLETE=25
QUEUE_REMOVE_ON_FAIL=10
QUEUE_STALLED_INTERVAL=30000
QUEUE_MAX_STALLED_COUNT=1

# Development Settings
DEBUG_MODE=true
DEVELOPER_MODE=true
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs
GRAPHQL_ENABLED=false
GRAPHQL_PATH=/graphql

# Error Handling
ERROR_HANDLING_ENABLED=true
ERROR_REPORTING_ENABLED=true
ERROR_STACK_TRACE_ENABLED=true
ERROR_NOTIFICATION_ENABLED=false
ERROR_NOTIFICATION_EMAIL=dev@hospital.com

# Feature Flags
FEATURE_TELEHEALTH_ENABLED=false
FEATURE_AI_DIAGNOSTICS_ENABLED=false
FEATURE_LAB_INTEGRATION_ENABLED=true
FEATURE_PHARMACY_INTEGRATION_ENABLED=true
FEATURE_BILLING_INTEGRATION_ENABLED=true
FEATURE_APPOINTMENT_REMINDERS_ENABLED=true
FEATURE_REPORTING_ENABLED=true
FEATURE_MULTI_TENANT_ENABLED=false

# Performance Optimization
PERFORMANCE_PROFILING_ENABLED=true
PERFORMANCE_SAMPLING_RATE=0.2
PERFORMANCE_SLOW_QUERY_THRESHOLD=3000
PERFORMANCE_MEMORY_LIMIT=1GB
PERFORMANCE_CPU_LIMIT=90%

# Infrastructure
KUBERNETES_ENABLED=false
DOCKER_ENABLED=true
HELM_ENABLED=false
ISTIO_ENABLED=false
CONTAINER_PORT=3001
CONTAINER_HOST=0.0.0.0
CONTAINER_WORKERS=1
CONTAINER_MAX_MEMORY=1GB