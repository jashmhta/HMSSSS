    "@nestjs/terminus": "^10.0.0",
    "@nestjs/throttler": "^5.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@prisma/client": "^6.16.2",
    "archiver": "^7.0.0",
    "axios": "^1.6.0",
    "barcode": "^0.1.0",
    "bcrypt": "^5.0.0",
    "bull": "^4.0.0",
    "cache-manager": "^5.0.0",
    "cache-manager-redis-store": "^3.0.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "compression": "^1.7.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "device-detector-js": "^3.0.0",
