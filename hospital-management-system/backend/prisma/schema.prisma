enum ReagentStatus {
  ACTIVE
  EXPIRED
  DEPLETED
  QUARANTINED
  DISCARDED
}

enum EquipmentStatus {
  ACTIVE
  MAINTENANCE
  CALIBRATION
  OUT_OF_ORDER
  DECOMMISSIONED
}

enum ReportType {
  PRELIMINARY
  FINAL
  AMENDED
  CORRECTED
}

enum ReportStatus {
  GENERATED
  APPROVED
  PRINTED
  DELIVERED
  ARCHIVED
