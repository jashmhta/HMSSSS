enum CollectionMethod {
  VENIPUNCTURE
  FINGERSTICK
  HEELSTICK
  URINE_COLLECTION
  STOOL_COLLECTION
  SWAB
  ASPIRATION
  BIOPSY
}

enum SampleCondition {
  GOOD
  HEMOLYZED
  CLOTTED
  INSUFFICIENT
  CONTAMINATED
  LIPIDIC
  ICTERIC
}

enum LabPriority {
  STAT
